op exceptions = IRQ | FIQ

op IRQ()
	action = {
		SetSPSR(Ucpsr);
		MBITS = mode_irq;
		IFLAG = 1;
		Set_ARM_GPR(14, PC + 4);
		PC = 0x18;
	}
	is_irq = 1

op FIQ()
	action = {
		SetSPSR(Ucpsr);
		MBITS = mode_fiq;
		IFLAG = 1;
		Set_ARM_GPR(14, PC + 4);
		PC = 0x1C;
	}
	is_irq = 1

